    <!-- Main Search Section -->
    <main>
        <div class="search-container">
            <h1 style="text-align: center; font-size: 48px; color: #4285f4; margin-bottom: 30px; font-weight: 400;">MiniSearch</h1>
            
            <div class="search-form">
                <input type="text" class="search-box" id="searchInput" placeholder="Search the web..." autocomplete="off">
                
                <div class="search-buttons">
                    <button class="search-btn" id="searchButton">
                        <i class="fas fa-search"></i> MiniSearch Search
                    </button>
                    <button class="search-btn" id="luckyButton">
                        <i class="fas fa-feather-alt"></i> I'm Feeling Curious
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Loading Indicator -->
        <div class="loading" id="loadingIndicator">
            <i class="fas fa-spinner fa-spin"></i>
            <p>Searching...</p>
        </div>
        
        <!-- Results Section -->
        <div class="results-container" id="resultsContainer">
            <div class="results-header" id="resultsHeader">
                About 0 results (0.00 seconds)
            </div>
            
            <div id="resultsList">
                <!-- Results will be dynamically inserted here -->
            </div>
            
            <!-- Pagination -->
            <div class="pagination" id="pagination">
                <!-- Pagination will be dynamically inserted here -->
            </div>
        </div>
    </main>
    
    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-top">
            <p>United States</p>
