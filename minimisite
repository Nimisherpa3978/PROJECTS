                <a href="#">Developers</a>
                <a href="#">API</a>
                <a href="#">Contact</a>
            </div>
        </div>
    </footer>

    <script>
        // Sample search data
        const searchData = [
            {
                id: 1,
                url: "https://www.example.com/web-development",
                title: "Introduction to Web Development",
                description: "Learn the basics of web development including HTML, CSS, and JavaScript. This comprehensive guide covers everything from creating your first web page to deploying a complete web application."
            },
            {
                id: 2,
                url: "https://www.example.com/javascript-tutorial",
                title: "JavaScript Tutorial for Beginners",
                description: "Master JavaScript with this step-by-step tutorial. Learn about variables, functions, DOM manipulation, and modern ES6+ features to build interactive websites."
            },
            {
                id: 3,
                url: "https://www.example.com/css-flexbox-guide",
                title: "Complete Guide to CSS Flexbox",
                description: "Flexbox is a powerful layout model that makes it easy to design flexible and responsive layouts. Learn how to use Flexbox properties with practical examples."
            },
            {
                id: 4,
                url: "https://www.example.com/search-algorithms",
                title: "Understanding Search Algorithms",
                description: "How do search engines work? Learn about the algorithms that power modern search engines and how they rank and retrieve information from vast datasets."
            },
            {
                id: 5,
                url: "https://www.example.com/responsive-design",
                title: "Responsive Web Design Principles",
                description: "Create websites that look great on all devices. Learn about media queries, fluid grids, and responsive images to build mobile-friendly websites."
            },
            {
                id: 6,
                url: "https://www.example.com/frontend-frameworks",
                title: "Comparing Frontend Frameworks",
                description: "An overview of popular frontend frameworks like React, Vue, and Angular. Understand their strengths, weaknesses, and use cases for your next project."
            },
            {
                id: 7,
                url: "https://www.example.com/api-integration",
                title: "API Integration Techniques",
                description: "Learn how to integrate third-party APIs into your web applications. This guide covers REST APIs, authentication methods, and handling API responses."
            },
            {
                id: 8,
                url: "https://www.example.com/web-performance",
                title: "Web Performance Optimization",
                description: "Speed up your website with these performance optimization techniques. Learn about lazy loading, code splitting, caching strategies, and more."
            }
        ];

        // DOM elements
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        const luckyButton = document.getElementById('luckyButton');
        const resultsList = document.getElementById('resultsList');
        const resultsHeader = document.getElementById('resultsHeader');
        const pagination = document.getElementById('pagination');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const resultsContainer = document.getElementById('resultsContainer');

        // Search state
        let currentSearch = '';
        let currentPage = 1;
        const resultsPerPage = 5;

        // Initialize with a default search
        window.addEventListener('DOMContentLoaded', () => {
            performSearch('web development');
            searchInput.value = 'web development';
        });

        // Perform search function
        function performSearch(query) {
            if (!query.trim()) return;
            
            currentSearch = query;
            currentPage = 1;
            
            // Show loading indicator
            document.body.classList.add('searching');
            
            // Simulate network delay
            setTimeout(() => {
                const filteredResults = searchData.filter(item => 
                    item.title.toLowerCase().includes(query.toLowerCase()) ||
                    item.description.toLowerCase().includes(query.toLowerCase())
                );
                
                displayResults(filteredResults);
                document.body.classList.remove('searching');
            }, 600);
        }

        // Display search results
        function displayResults(results) {
            resultsList.innerHTML = '';
            
            // Calculate pagination
            const totalPages = Math.ceil(results.length / resultsPerPage);
            const startIndex = (currentPage - 1) * resultsPerPage;
            const endIndex = Math.min(startIndex + resultsPerPage, results.length);
            const pageResults = results.slice(startIndex, endIndex);
            
            // Update results header
            const resultCount = results.length;
            resultsHeader.textContent = `About ${resultCount} result${resultCount !== 1 ? 's' : ''} (0.${Math.floor(Math.random() * 90 + 10)} seconds)`;
            
            // Display results for current page
            if (pageResults.length === 0) {
                resultsList.innerHTML = `
                    <div class="result-item">
                        <h3 style="color: #70757a; font-weight: 400;">No results found for "${currentSearch}"</h3>
                        <p style="margin-top: 10px;">Try different keywords or check your spelling</p>
                    </div>
                `;
            } else {
                pageResults.forEach(result => {
                    const resultElement = document.createElement('div');
                    resultElement.className = 'result-item';
                    resultElement.innerHTML = `
                        <div class="result-url">
                            <i class="fas fa-globe"></i> ${result.url}
                        </div>
                        <a href="#" class="result-title">${result.title}</a>
                        <div class="result-description">
                            ${highlightSearchTerms(result.description, currentSearch)}
                        </div>
                    `;
                    resultsList.appendChild(resultElement);
                });
            }
            
            // Display pagination
            displayPagination(totalPages);
            
            // Scroll to results
            resultsContainer.scrollIntoView({ behavior: 'smooth' });
        }

        // Highlight search terms in result descriptions
        function highlightSearchTerms(text, searchQuery) {
            if (!searchQuery.trim()) return text;
            
            const terms = searchQuery.toLowerCase().split(' ');
            let highlightedText = text;
            
            terms.forEach(term => {
                if (term.length > 2) {
                    const regex = new RegExp(`(${term})`, 'gi');
                    highlightedText = highlightedText.replace(regex, '<mark>$1</mark>');
                }
            });
            
            return highlightedText;
        }

        // Display pagination controls
        function displayPagination(totalPages) {
            pagination.innerHTML = '';
            
            if (totalPages <= 1) return;
            
            // Previous button
            if (currentPage > 1) {
                const prevButton = document.createElement('a');
                prevButton.href = '#';
                prevButton.className = 'page-number';
                prevButton.innerHTML = '<i class="fas fa-chevron-left"></i> Previous';
                prevButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    currentPage--;
                    performSearch(currentSearch);
                });
                pagination.appendChild(prevButton);
            }
            
            // Page numbers
            const maxVisiblePages = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
            
            // Adjust if we're near the end
            if (endPage - startPage + 1 < maxVisiblePages) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }
            
            for (let i = startPage; i <= endPage; i++) {
                const pageButton = document.createElement('a');
                pageButton.href = '#';
                pageButton.className = `page-number ${i === currentPage ? 'active' : ''}`;
                pageButton.textContent = i;
                pageButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    currentPage = i;
                    performSearch(currentSearch);
                });
                pagination.appendChild(pageButton);
            }
            
            // Next button
            if (currentPage < totalPages) {
                const nextButton = document.createElement('a');
                nextButton.href = '#';
                nextButton.className = 'page-number';
                nextButton.innerHTML = 'Next <i class="fas fa-chevron-right"></i>';
                nextButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    currentPage++;
                    performSearch(currentSearch);
                });
                pagination.appendChild(nextButton);
            }
        }

        // Event listeners
        searchButton.addEventListener('click', () => {
            performSearch(searchInput.value);
        });

        searchInput.addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                performSearch(searchInput.value);
            }
        });

        luckyButton.addEventListener('click', () => {
            const randomQueries = [
                'What is the future of artificial intelligence?',
                'How do search engines index websites?',
                'Latest web development trends',
                'Machine learning for beginners',
                'History of the internet'
            ];
            
            const randomQuery = randomQueries[Math.floor(Math.random() * randomQueries.length)];
            searchInput.value = randomQuery;
            performSearch(randomQuery);
        });

        // Focus search input on page load
        searchInput.focus();
    </script>
</body>
</html>
